[global]
    font = Terminus (TTF) 8
    
  
    allow_markup = yes
    format = "<b>%s</b>\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = right
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "300x7-10+30"
    shrink = no
    transparency = 0
    idle_threshold = 120
    monitor = 0
    follow = none
    sticky_history = yes
    history_length = 20
    show_indicators = yes
    indicator_hidden = yes
    line_height = 0
    separator_height = 1
    padding = 8
    horizontal_padding = 42
    startup_notification = false
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/firefox -new-tab
#    icon_position = off
#    icon_folders = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

[frame]
    width = 1
    color = "#dd925e"

[shortcuts]

    # Close notification.
    close = ctrl+space
    
    # Close all notifications.
    close_all = ctrl+shift+space
    
    # Redisplay last message(s).
    # On the US keyboard layout "grave" is normally above TAB and left
    # of "1".
    history = ctrl+grave
    
    # Context menu.
    context = ctrl+shift+period

[urgency_low]
    background = "#161616"
    foreground = "#dd925e"
    timeout = 10

[urgency_normal]
    background = "#161616"
    foreground = "#dd925e"
    timeout = 10

[urgency_critical]
    background = "#161616"
    foreground = "#a54242"
    timeout = 0


